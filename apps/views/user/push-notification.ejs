<% include ../partials/header %>
<div class="col-md-12">
    <div class="box box-primary">
        <form id="" action="/admin/user/<%=idu%>/push-notification/<%=tokenID%>" method="post" enctype="application/x-www-form-urlencoded">
            <div class="box-body">
                <div class="row form-group">
                    <span class="text-danger" style="margin-left: 1%;"><b>*</b>Send Message</span>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" placeholder="Title ( No longer than 25 words )" id="title" name="title" required>
                    </div>
                
                    <div class="form-group col-md-12">
                        <textarea type="text" height="175px" class="form-control" placeholder="Description ( No longer than 100 words )" id="description" name="description" required></textarea>
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary btn-flat" style="float: right;margin-right: 1%;">Add Notification</button>
            </div>
        </form>
    </div>
</div>