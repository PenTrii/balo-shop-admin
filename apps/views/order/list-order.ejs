          <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
            <div class="container d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
              <h1 class="h2">Orders</h1>
            </div>
            <br>
  
                <div class="table-responsive">
                  <table class="table table-striped table-sm">
                    <thead>
                      <tr>
                        <th>Id Order</th>
                        <th>User</th>
                        <th>Status ID</th>
                        <th>Address</th>
                        <th>Total</th>
                        <th>Day</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (var index = 0; index < order.length; index++) {%>
                        <tr>                         
                          <td><%=order[index]._id%></td>
                          <td><%=email[index]%></td>          
                          <td><%=order[index].status%></td>          
                          <td><%=order[index].address%></td>          
                          <td><%=Intl.NumberFormat('VN', { style: 'currency', currency: 'VND' }).format(order[index].total)%></td>          
                          <td><%=days[index]%></td>      
                                
                          <td>
                            <a class="fa fa-eye" href="/admin/order/view-order/<%=order[index]._id%>"></a>
                            <a class="fa fa-edit" href="/admin/order/edit-status-order/<%=order[index]._id%>"></a> 
                            <a class="fa fa-remove" href="/admin/order/delete-order/<%=order[index]._id%>"></a>
                          </td>
                          
                        </tr>
                      <% }; %>
                    </tbody>
                  </table>
                </div>
              </div>
            </main>
        </div>
